{
  "name": "envapt",
  "type": "module",
  "version": "1.0.4",
  "description": "The apt way to handle env",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "files": [
    "dist",
    "NOTICE",
    "LICENSE",
    "README.md",
    "envuments.license"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/materwelonDhruv/envapt.git"
  },
  "homepage": "https://github.com/materwelonDhruv/envapt/blob/main/README.md",
  "scripts": {
    "build": "tsup && mv dist/index.d.cts dist/index.d.mts",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "lint": "eslint 'src/**/*.{ts,tsx}' --cache",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix --cache",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}' --cache",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json,md}' --cache",
    "typecheck": "tsc --noEmit",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "prepare": "husky",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "keywords": [
    "env",
    ".env",
    "dotenv",
    "environment",
    "variables",
    "config",
    "configuration",
    "settings"
  ],
  "author": "Dhruv <materwelondhruv@gmail.com>",
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Mason Rogers",
      "email": "viction.dev@gmail.com"
    }
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "chai": "^5.2.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "packageManager": "pnpm@10.12.0",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}

{
  "name": "envapt",
  "type": "module",
  "version": "4.0.1",
  "description": "The apt way to handle env",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "NOTICE.md",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/materwelonDhruv/envapt.git"
  },
  "homepage": "https://github.com/materwelonDhruv/envapt/blob/main/README.md",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup",
    "dev": "tsc --watch",
    "lint": "eslint '{src,tests,scripts}/**/*.{ts,tsx}' --cache",
    "lint:fix": "eslint '{src,tests,scripts}/**/*.{ts,tsx}' --fix --cache",
    "fmt": "prettier --write '{src,tests,scripts}/**/*.{ts,tsx,json,md}' --cache",
    "fmt:check": "prettier --check '{src,tests,scripts}/**/*.{ts,tsx,json,md}' --cache",
    "tc": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest dev",
    "coverage": "pnpm run test --coverage",
    "cs": "changeset",
    "cs:publish": "changeset publish",
    "cs:status": "changeset status",
    "bump": "pnpm cs version && pnpm tsx scripts/bump-jsr.ts",
    "release": "pnpm run cs:publish",
    "prepare": "husky",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "keywords": [
    "env",
    ".env",
    "dotenv",
    "environment",
    "variables",
    "config",
    "configuration",
    "settings"
  ],
  "author": "Dhruv <materwelondhruv@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@types/chai": "^5.2.2",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "chai": "^6.2.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "engines": {
    "node": ">=22.20.0",
    "bun": ">=1.2.0",
    "deno": ">=2.4.0"
  },
  "packageManager": "pnpm@10.17.1",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}

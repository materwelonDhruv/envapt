{
    "name": "@envapt/envapt",
    "type": "module",
    "version": "0.0.0",
    "description": "The apt way to handle env (repository root)",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "lint:fix": "turbo lint:fix",
        "fmt": "turbo fmt",
        "fmt:check": "turbo fmt:check",
        "tc": "turbo tc",
        "test": "turbo test",
        "coverage": "turbo coverage",
        "lint-staged": "lint-staged",
        "clean": "turbo clean",
        "clean:node": "find . -name node_modules -type d -prune -exec rm -rf '{}' +",
        "turbo:rebuild": "turbo clean && turbo build",
        "turbo:prebuild": "turbo clean && turbo lint && turbo tc",
        "turbo:prune": "turbo prune",
        "turbo:graph": "turbo build --graph",
        "turbo:trace": "turbo build --trace",
        "prepare": "husky",
        "cs": "changeset",
        "cs:publish": "changeset publish",
        "cs:status": "changeset status",
        "release": "pnpm run build && pnpm run cs:publish",
        "prepublishOnly": "pnpm run clean && pnpm run build",
        "bump:deps:pkgs": "for dir in packages/*/; do echo \"Updating $dir...\"; (cd \"$dir\" && pnpm update --latest); done",
        "bump:deps:apps": "for dir in apps/*/; do echo \"Updating $dir...\"; (cd \"$dir\" && pnpm update --latest); done",
        "bump:deps": "pnpm run bump:deps:pkgs && pnpm run bump:deps:apps"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.7",
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@seedcord/eslint-config": "^1.3.1",
        "@seedcord/tsconfig": "^1.1.0",
        "@seedcord/tsup-config": "^1.1.0",
        "@swc/core": "^1.15.2",
        "@types/chai": "^5.2.3",
        "@types/node": "^24.10.1",
        "@vitest/coverage-v8": "^4.0.9",
        "chai": "^6.2.1",
        "eslint": "^9.39.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "prettier": "^3.6.2",
        "tsup": "^8.5.1",
        "tsx": "^4.20.6",
        "turbo": "^2.6.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.9"
    },
    "pnpm": {
        "overrides": {
            "glob": "11.1.0"
        }
    },
    "packageManager": "pnpm@10.22.0"
}
